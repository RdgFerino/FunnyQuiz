<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ced8ea">

    <!-- Pergunta -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergunta será exibida aqui"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <!-- Botão Opção 1 -->
    <Button
        android:id="@+id/option1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/questionTextView"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:text="Opção 1"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp" />

    <!-- Botão Opção 2 -->
    <Button
        android:id="@+id/option2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/option1Button"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:text="Opção 2"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp" />

    <!-- Botão Opção 3 -->
    <Button
        android:id="@+id/option3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/option2Button"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:text="Opção 3"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp" />

    <!-- Botão Opção 4 -->
    <Button
        android:id="@+id/option4Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/option3Button"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:text="Opção 4"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp" />
</RelativeLayout>
